<h1><%= @post.title %></h1>

<% if can? :update, @post %>
  <%= link_to "Edit Post", edit_topic_post_path, class: 'btn btn-primary btn-mini' %>
<% end %>

<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      posted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    </small>    
    <p><%= image_tag(@post.image_url) if @post.image? %></p>
    <p class="muted"><%= markdown @post.body %></p>
    <h4><%= @comments.count %> Comments: </h4>  
  </div>
  <div class="span4">
    <% if can? :create, Comment %>
      <%= link_to "New Comment", new_topic_post_comment_path(@topic,@post), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="span8">

    <% @comments.each do |comment| %>
      <div class="media">
        <div class="media-body">
          <small>
            <em><b><% who_said_it = time_ago_in_words(comment.created_at) + " ago by " + comment.user.name + ":" %>
              <%= if (current_user == comment.user)
                  link_to who_said_it, edit_topic_post_comment_path(@topic,@post,comment)
                else
                  who_said_it
                 end %></b></em>
            <%= markdown comment.body.chomp %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>