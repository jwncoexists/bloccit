<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  <%= link_to '#', class: 'pull-left' do %>
    <%= image_tag(comment.user.avatar.small.url) if comment.user.avatar? %>
  <% end %>
  <div class="media-body">
    <small>
      <b><em><%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago</b></em>
      <% if can? :manage, comment %>
        | <%= link_to "Edit", edit_topic_post_comment_path(*comment_url_helper(comment)) %>
      <% end %>
      <% if can? :destroy, comment %>
        | <%= link_to "Delete", comment_url_helper(comment), method: :delete, remote: true %>
      <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
<% end %>