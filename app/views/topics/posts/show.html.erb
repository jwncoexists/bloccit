<h1><%= @post.title %></h1>

<div class="row">
  <div class="span8">
    <% if can? :update, @post %>
      <%= link_to "Edit Post", edit_topic_post_path, class: 'btn btn-primary btn-mini' %>
    <% end %>

    <% if can? :destroy, @post %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-primary btn-mini btn-danger', confirm: 'Are you sure you want to delete this post?' %>
    <% end %> 


    <%= render partial: 'votes/voter', locals: { topic: @topic, post: @post } %>
    <h3><%= pluralize(@post.points, 'point') %></h3>
    <small>
      <%= pluralize(@post.up_votes, 'up vote') %>, 
      <%= pluralize(@post.down_votes, 'down vote') %>
    </small>
  </div>
  <%= render partial: 'favorites/favorite', locals: { topic: @topic, post: @post } %>
</div>

<div class="row">
  <div class="span8">
    <br><small><em><b>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      posted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    </small> </em></b> 
    <p><%= image_tag(@post.image_url) if @post.image? %></p>
    <p class="muted"><%= markdown @post.body %></p>

    <h3><%= pluralize(@comments.count, "Comment") %> </h3>  
  </div>
  <div class="span8">  
      <%= render partial: 'comments/comment', collection: @comments, locals: { topic: @topic, post: @post } %>
  </div>
  <div class="span4">
    <% if can? :create, Comment %>
      <%= link_to "New Comment", new_topic_post_comment_path(@topic,@post), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>
